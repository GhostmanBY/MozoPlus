<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        md_bg_color: get_color_from_hex("#F5F5F5")
        size_hint: None, None  # Deshabilitar size_hint para controlar el tamaño manualmente
        size: "350dp", "500dp"  # Ajusta el tamaño del contenedor
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centraliza el contenedor en la ventana

        Image:
            source: 'test.png'
            size_hint: None, None
            size: "200dp", "200dp"
            pos_hint: {"center_x": 0.5}  # Centraliza horizontalmente

        MDLabel:
            text: "Bienvenido  MozoPlus"
            halign: 'center'
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: get_color_from_hex("#333333")
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: codigo_field
            hint_text: "Ingrese código de mozo"
            icon_right: 'account'
            icon_right_color: get_color_from_hex("#4CAF50")
            on_text_validate: root.login()
            size_hint_x: None
            width: "300dp"  # Ancho fijo
            pos_hint: {"center_x": 0.5}  # Centraliza horizontalmente

        MDRaisedButton:
            text: "Ingresar"
            icon: 'login-variant'
            on_release: root.login()
            size_hint_x: None
            width: "150dp"  # Ancho fijo
            pos_hint: {"center_x": 0.5}  # Centraliza horizontalmente

        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        MDTextButton:
            text: "¿Olvidaste tu código?"
            pos_hint: {"center_x": 0.5}  # Centraliza horizontalmente
            on_release: root.show_forgot_code_dialog()